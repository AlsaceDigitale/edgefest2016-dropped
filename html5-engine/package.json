{
  "name": "edgefest-html5-engine",
  "version": "0.1.0",
  "description": "HTML 5 game platform for EdgeFest 2016",
  "scripts": {
    "serve": "babel-node server/app.js && npm run webpack-watch",
    "webpack-build": "webpack --inline --colors --progress --display-error-details --display-cached",
    "webpack-watch": "npm run webpack-build -- --watch",
    "webpack-dev-server": "webpack-dev-server --inline --colors --progress --display-error-details --display-cached --port 3000 --content-base client",
    "start": "npm run webpack-dev-server"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.0.20",
    "babel-loader": "^6.0.1",
    "babel-preset-es2015": "^6.0.15",
    "css-loader": "^0.23.1",
    "node-libs-browser": "^0.5.3",
    "node-sass": "^3.7.0",
    "resolve-url-loader": "^1.4.3",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.14.1"
  }
}
